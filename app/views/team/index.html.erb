
<head>
  <meta charset="utf-8"/>
    <title>Chart.js demo</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/0.2.0/Chart.min.js" type="text/javascript"></script>

</head>

<body>

<div id= "container">
<p>
<select id="team_year">
	<%= @teams.each do |team| %>
		<option value="<%= team.year %>"><%= team.year %></option>
	<%end%>
</select>
</p>

<p>
<select id="teamnames">
	<%= @teamnames.each do |team| %>
		<option value="<%= team.name %>"><%= team.name %></option>
	<%end%>
</select>
</p>

<p>
<input type = "submit" id = "submit">
</p>

<div id = "money">
<p>
<canvas id="income" width="600" height="400"></canvas>
<script>

var barData = {

    labels : ["Hits","Doubles","Triples","Home Runs","Walks","Stolen Bases"] ,
    datasets : [
    	{
    		fillColor : ["rgba(73,188,170,0.8)" ],
        	strokeColor : "rgba(72,174,209,0.10)" ,
        	highlightFill: "rgba(72,174,209,0.8",

         	data : [10,20,30,40,50,60]
    	}
    ]
};

        var income = document.getElementById("income").getContext("2d");
            
        new Chart(income).Bar(barData , {scaleFontSize:16 , scaleFontColor: "#FF0000"});
</script>
</p>
</div>

</div>
</p>
</body>